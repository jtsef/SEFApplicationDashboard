
@{
    ViewBag.Title = "CustomerOrderBlock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- -->
<h2>Customer Order Block</h2>
<h4>Upload a Comma Delimited File (CVS) with the customer accounts to block.</h4>
<div ng-controller="customerOrderBlock as vm">
    <form action="" method="post" enctype="multipart/form-data" >
        <div id="fileUploadModal" class="modal fade" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog" style="top:50px;">
                <div class="modal-content" style="height:140px;">
                    <h4 style="text-align:center; text-decoration-style:double">Select the Customer Accounts File to Upload</h4>
                    <div class="col-lg-12">
                        <div class="col-md-4" style="margin-top:15px;"><input type="file" id="file" name="file" /></div>
                        <div class="col-md-offset-2 col-md-4" style="margin-top:15px;"><label for="file">File Upload</label></div>
                    </div>
                    <div class="row"><input type="submit" style="float:right" id="fileClose" class="btn btn-default" value="Upload" /></div>
                </div>
                
            </div>
            
        </div>
    </form>
    <form>
        <div class="jumbotron">
            <button typee="button" ng-click="vm.fileUpload();" id="fileUpload" class="btn btn-default">Upload Customer Block File</button>
        </div>
    </form>
</div>


